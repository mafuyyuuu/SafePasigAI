<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        app:cardCornerRadius="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="16dp">

            <!-- Avatar -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="52dp"
                android:layout_height="52dp"
                app:cardCornerRadius="26dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tvInitial"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/pasig_light"
                        android:fontFamily="@font/satoshi_bold"
                        android:gravity="center"
                        android:text="B"
                        android:textColor="@color/pasig_dark"
                        android:textSize="22sp" />

                    <!-- Online indicator -->
                    <View
                        android:id="@+id/onlineIndicator"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:layout_gravity="bottom|end"
                        android:background="@drawable/bg_white_rounded"
                        android:backgroundTint="@color/success_green" />
                </FrameLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Chat Info -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/satoshi_bold"
                        android:text="Brgy. San Nicolas"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tvTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/satoshi_regular"
                        android:text="2:30 PM"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvLastMessage"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:fontFamily="@font/satoshi_regular"
                        android:maxLines="1"
                        android:text="Responder is on the way..."
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp" />

                    <!-- Unread badge -->
                    <TextView
                        android:id="@+id/tvUnread"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:background="@drawable/bg_white_rounded"
                        android:backgroundTint="@color/alert_red"
                        android:fontFamily="@font/satoshi_bold"
                        android:gravity="center"
                        android:text="2"
                        android:textColor="@color/white"
                        android:textSize="11sp"
                        android:visibility="gone" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>
