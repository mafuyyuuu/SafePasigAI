<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="32dp">

    <!-- Icon -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/iconCard"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginBottom="32dp"
        app:cardBackgroundColor="@color/blue_bg"
        app:cardCornerRadius="60dp"
        app:cardElevation="0dp">

        <ImageView
            android:id="@+id/ivIcon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_shield_check"
            app:tint="@color/pasig_dark" />
    </com.google.android.material.card.MaterialCardView>

    <!-- Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/satoshi_bold"
        android:gravity="center"
        android:text="Welcome to SafePasig.AI"
        android:textColor="@color/text_primary"
        android:textSize="26sp" />

    <!-- Description -->
    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/satoshi_regular"
        android:gravity="center"
        android:lineSpacingMultiplier="1.3"
        android:text="Your AI-powered safety companion for commuting in Pasig City"
        android:textColor="@color/text_secondary"
        android:textSize="16sp" />

</LinearLayout>
